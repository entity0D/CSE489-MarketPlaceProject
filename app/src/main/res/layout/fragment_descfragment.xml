<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="150dp"
    android:background="#232736"
    tools:context=".descfragment">

    <ImageView
        android:id="@+id/imagegholder"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#1F232C" />

    <TextView
        android:id="@+id/nameholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagegholder"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:padding="3dp"
        android:shadowColor="#A76FFF"
        android:shadowDx="0.0"

        android:shadowDy="0.0"
        android:shadowRadius="8"
        android:text="Product Name"
        android:textColor="#000"
        android:textSize="25sp"


        />


    <TextView
        android:id="@+id/priceHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idHolder"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:padding="3dp"
        android:shadowColor="#A76FFF"
        android:shadowDx="0.0"

        android:shadowDy="0.0"
        android:shadowRadius="8"
        android:text="Product Price"
        android:textColor="#000000"
        android:textSize="25sp"


        />

    <TextView
        android:id="@+id/idHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameholder"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:padding="3dp"
        android:shadowColor="#A76FFF"
        android:shadowDx="0.0"

        android:shadowDy="0.0"
        android:shadowRadius="8"
        android:text="Product Price"
        android:textColor="#000"
        android:textSize="20sp"

        />

    <Button
        android:id="@+id/btn_buyProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/priceHolder"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="30dp"
        android:text="Buy"


        ></Button>

</RelativeLayout>